<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stripe_refund_form" model="ir.ui.view">
        <field name="name">stripe.refund.form</field>
        <field name="model">stripe.refund</field>
        <field name="arch" type="xml">
            <form string="Reembolso de Stripe">
                <sheet>
                    <group>
                        <field name="refund_id" readonly="1"/>
                        <field name="refund_status" readonly="1"/>
                        <field name="invoice_id" readonly="1"/>
                        <field name="currency_id" invisible="1" readonly="1"/>
                        <field name="amount_refunded" readonly="1"/>
                        <field name="charge" readonly="1"/>
                        <field name="created" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stripe_refund_tree" model="ir.ui.view">
        <field name="name">stripe.refund.tree</field>
        <field name="model">stripe.refund</field>
        <field name="arch" type="xml">
            <tree string="Reembolsos de Stripe">
                <field name="sequence" widget="handle"/>
                <field name="refund_id" decoration-bf="1" readonly="1"/>
                <field name="refund_status" readonly="1"/>
                <field name="invoice_id" readonly="1"/>
                <field name="currency_id" invisible="1" readonly="1"/>
                <field name="amount_refunded" readonly="1"/>
                <field name="charge" readonly="1"/>
                <field name="created" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_stripe_refund" model="ir.actions.act_window">
        <field name="name">Reembolsos de Stripe</field>
        <field name="res_model">stripe.refund</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_stripe_refund" name="Reembolsos de Stripe" parent="account.menu_finance_receivables" action="action_stripe_refund"/>

</odoo>
